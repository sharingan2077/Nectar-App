<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Nectar" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowBackground">@color/white</item>
        <!-- Устанавливаем, чтобы система рисовала фоны панелей -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <!-- Устанавливаем, чтобы панель навигации имела светлый фон и темные значки -->
        <item name="android:windowLightNavigationBar">true</item>

        <!-- Настройка фона панели навигации -->
        <item name="android:navigationBarColor">@color/white</item>
<!--        <item name="android:windowDrawsSystemBarBackgrounds">true</item>-->
    </style>

    <style name="Theme.Nectar" parent="Base.Theme.Nectar" />

    <style name="CustomBottomAppBarStyle" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="itemRippleColor">@android:color/transparent</item>
        <item name="itemIconTint">@color/green</item>
        <item name="android:background">@null</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

</resources>